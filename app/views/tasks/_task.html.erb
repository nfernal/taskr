<div class='panel panel-info'>
  <div class='panel-heading'><%= link_to edit_task_path(task) do %>

        Created: <%= time_ago_in_words(task.created_at) %>
        <% end %>

    <%= link_to 'X', task_path(task), method: :delete, data: {confirm: 'Are you sure?'}, class: 'pull-right' %>
        </div>
  <div class='panel-body'><%= task.content %></div>
  <div class='panel-footer'>
    <div class="btn-group btn-group-justified">
      <% if task.state == 'in_progress' %>
          <%= link_to '<i class="fa fa-arrow-left"></i>'.html_safe, change_task_path(task, state: "to_do"), method: :put,
                      class: 'btn btn-info btn-block' %>
          <%= link_to '<i class="fa fa-arrow-right"></i>'.html_safe, change_task_path(task, state: "complete"), method: :put,
                      class: 'btn btn-info btn-block' %>
      <% elsif task.state == 'complete' %>
          <%= link_to '<i class="fa fa-arrow-left"></i>'.html_safe, change_task_path(task, state: "in_progress"), method: :put,
                      class: 'btn btn-info btn-block' %>
      <% else %>
          <%= link_to '<i class="fa fa-arrow-right"></i>'.html_safe, change_task_path(task, state: "in_progress"), method: :put,
                      class: 'btn btn-info btn-block' %>
      <% end %>
    </div>
  </div>
</div>



